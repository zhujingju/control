<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/layout1_rel_yd"
        android:layout_width="@dimen/dip_114.0"
        android:layout_height="@dimen/dip_85.5"
        android:background="@drawable/robot_icon_direction_bg"
        >

        <ImageView
            android:background="@drawable/zou"
            android:id="@+id/layout1_zou"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/you"
            android:id="@+id/layout1_you"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/up"
            android:id="@+id/layout1_up"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <ImageView
            android:background="@drawable/down"
            android:id="@+id/layout1_down"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>
</LinearLayout>